programa P1Ej4
procesos
  proceso recolectarPapeles (ES cantPapeles:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      cantPapeles := cantPapeles + 1
  fin
  proceso recolectarFlores (ES cantFlores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlores := cantFlores + 1 
  fin
  proceso recorridoPapeles
  variables
    cantPapeles:numero
  comenzar
    cantPapeles := 0 
    mientras (PosAv < 51)
      repetir 99
        recolectarPapeles(cantPapeles)
        mover
      recolectarPapeles(cantPapeles)
      Pos(PosAv + 1, 1)
  fin
areas
  areaImp1 : AreaP(1,1,25,100)
  areaImp2 : AreaP (51,1,75,100)
  areaPar1 : AreaP(26,1,50,100)
  areaPar2 : AreaP (76,1,100,100)
robots
  robot papelero
  comenzar
    recorridoPapeles
  fin
variables
  p1 : papelero
comenzar
  AsignarArea (p1,areaPar1)
  Iniciar(p1,26,1)
fin
